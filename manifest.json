{
  "manifest_version": 3,
  "name": "Entry Block Helper",
  "version": "1.0",
  "description": "Entry 블록코딩을 도와주는 AI 튜터",
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Entry Block Helper",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://playentry.org/*", "*://*.playentry.org/*"],
      "js": ["questionClassifier.js", "blockRenderer.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["entryProbe.js", "icon.png", "icon.jpg", "icon.jpeg", "icon.gif", "icon.svg", "data/blocks/*/*.json"],
      "matches": ["*://playentry.org/*", "*://*.playentry.org/*", "<all_urls>"]
    }
  ],

  "host_permissions": ["https://api.openai.com/*"]
}
