        "set_variable('줌레벨', 150)",
        "broadcast_message('줌인')",
        "locate_xy_time(0, 0, 3)",
        "wait_second(2)",
        "remove_dialog()",
        "",
        "// 씬 3: 성 전체",
        "speak_something('그는 성을 지키고 있었죠.')",
        "set_variable('줌레벨', 80)",
        "broadcast_message('줌아웃')",
        "locate_xy_time(-100, 100, 4)",
