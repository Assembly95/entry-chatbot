    {
      "title": "탄막 패턴",
      "description": "보스가 발사하는 탄막",
      "blocks": [
        "// 탄막 클론",
        "when_clone_start",
        "set_size(30)",
        "set_costume('탄환')",
        "// 보스 위치에서 시작",
        "locate_xy(<get_object_x('보스')>, <get_object_y('보스')>)",
