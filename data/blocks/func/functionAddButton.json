  "usage_examples": [
    {
      "title": "기본 매개변수 추가",
      "description": "다양한 타입의 매개변수를 순차적으로 추가",
      "blocks": [
        "// 1. 함수 생성 블록 배치",
        "function_create('사용자정보설정')",
        "",
        "// 2. + 버튼 클릭 → '문자열' 선택",
        "// → 매개변수 이름: '이름'",
        "",
        "// 3. + 버튼 클릭 → '숫자' 선택",
        "// → 매개변수 이름: '나이'",
        "",
        "// 4. + 버튼 클릭 → '불린' 선택",
        "// → 매개변수 이름: '회원여부'",
        "",
        "// 최종 함수 형태:",
        "function_create('사용자정보설정',",
        "  [string_param('이름'),",
        "   number_param('나이'),",
        "   boolean_param('회원여부')])",
        "  set_variable('사용자이름', <param('이름')>)",
        "  set_variable('사용자나이', <param('나이')>)",
        "  if_condition(<param('회원여부')>)",
        "    speak_something(<param('이름')> + '님은 ' + <param('나이')> + '세 회원입니다')",
        "  else",
        "    speak_something(<param('이름')> + '님은 ' + <param('나이')> + '세 비회원입니다')"
      ],
      "explanation": "+ 버튼을 통해 다양한 타입의 매개변수를 추가하는 과정입니다."
    },
    {
      "title": "라벨과 매개변수 조합",
      "description": "설명 라벨을 추가하여 가독성 향상",
      "blocks": [
        "// 1. 함수 생성",
        "function_create('도형그리기')",
        "",
        "// 2. + 버튼 → '라벨' 선택",
        "// → 텍스트: '=== 도형 설정 ==='",
        "",
        "// 3. + 버튼 → '라벨' 선택",
        "// → 텍스트: '변의 개수:'",
        "",
        "// 4. + 버튼 → '숫자' 선택",
        "// → 매개변수 이름: '변'",
        "",
        "// 5. + 버튼 → '라벨' 선택",
        "// → 텍스트: '크기(픽셀):'",
        "",
        "// 6. + 버튼 → '숫자' 선택",
        "// → 매개변수 이름: '크기'",
        "",
        "// 최종 함수 형태:",
        "function_create('도형그리기',",
        "  [label('=== 도형 설정 ==='),",
        "   label('변의 개수:'), number_param('변'),",
        "   label('크기(픽셀):'), number_param('크기')])",
        "  start_drawing",
        "  repeat_basic(<param('변')>)",
        "    move_direction(<param('크기')>)",
        "    direction_relative(<calc_operation(360, '/', <param('변')>)>)",
        "  stop_drawing"
      ],
      "explanation": "라벨과 매개변수를 조합하여 이해하기 쉬운 함수 인터페이스를 만듭니다."
    },
    {
      "title": "복잡한 함수 인터페이스",
      "description": "여러 섹션으로 구분된 매개변수 구성",
      "blocks": [
        "// 단계별 매개변수 추가 과정",
        "function_create('게임설정')",
        "",
        "// 섹션 1: 플레이어 설정",
        "// + 버튼 → 라벨 '=== 플레이어 ==='",
        "// + 버튼 → 라벨 '이름:'",
        "// + 버튼 → 문자열 매개변수 '플레이어명'",
        "// + 버튼 → 라벨 '난이도(1-5):'",
        "// + 버튼 → 숫자 매개변수 '레벨'",
        "",
        "// 섹션 2: 게임 옵션",
        "// + 버튼 → 라벨 '=== 옵션 ==='",
        "// + 버튼 → 라벨 '사운드:'",
        "// + 버튼 → 불린 매개변수 '소리켜기'",
        "// + 버튼 → 라벨 '시간제한(초):'",
        "// + 버튼 → 숫자 매개변수 '제한시간'",
        "",
        "// 최종 구성:",
        "function_create('게임설정',",
        "  [label('=== 플레이어 ==='),",
        "   label('이름:'), string_param('플레이어명'),",
        "   label('난이도(1-5):'), number_param('레벨'),",
        "   label('=== 옵션 ==='),",
        "   label('사운드:'), boolean_param('소리켜기'),",
        "   label('시간제한(초):'), number_param('제한시간')])",
        "  // 함수 내용 구현",
        "  set_variable('player_name', <param('플레이어명')>)",
        "  set_variable('difficulty', <param('레벨')>)",
        "  set_variable('sound_on', <param('소리켜기')>)",
        "  set_variable('time_limit', <param('제한시간')>)"
      ],
      "explanation": "복잡한 설정을 체계적으로 구성하기 위해 여러 매개변수를 추가합니다."
    },
    {
      "title": "동적 매개변수 구성",
      "description": "필요에 따라 매개변수를 추가/제거",
      "blocks": [
        "// 초기 함수",
        "function_create('계산기', [number_param('숫자1'), number_param('숫자2')])",
        "  return <calc_operation(<param('숫자1')>, '+', <param('숫자2')>)>",
        "",
        "// 기능 확장이 필요한 경우:",
        "// 1. 기존 함수 수정",
        "// 2. + 버튼 클릭",
        "// 3. '문자열' 매개변수 '연산자' 추가",
        "",
        "// 확장된 함수:",
        "function_create('계산기',",
        "  [number_param('숫자1'),",
        "   label('연산:'),",
        "   string_param('연산자'),",
        "   number_param('숫자2')])",
        "  if_condition(<param('연산자')> = '+')",
        "    return <calc_operation(<param('숫자1')>, '+', <param('숫자2')>)>",
        "  else_if(<param('연산자')> = '-')",
        "    return <calc_operation(<param('숫자1')>, '-', <param('숫자2')>)>",
        "  else_if(<param('연산자')> = '*')",
        "    return <calc_operation(<param('숫자1')>, '*', <param('숫자2')>)>",
        "  else_if(<param('연산자')> = '/')",
        "    return <calc_operation(<param('숫자1')>, '/', <param('숫자2')>)>"
      ],
      "explanation": "함수의 기능 확장에 따라 매개변수를 추가하여 발전시킵니다."
    }
  ],

