  "usage_examples": [
    {
      "title": "클릭 애니메이션 복원",
      "description": "클릭 효과 후 원래 크기로 복원",
      "blocks": [
        "when_object_click",
        "// 클릭 시 확대 효과",
        "repeat_basic(10)",
        "  change_scale_size(5)",
        "  wait_second(0.02)",
        "",
        "// 잠시 유지",
        "wait_second(0.3)",
        "",
        "// 원래 크기로 복원",
        "reset_scale_size()",
        "speak_something('클릭!')"
      ],
      "explanation": "클릭 애니메이션 후 reset_scale_size로 원래 크기를 복원합니다."
    },
    {
      "title": "파워업 종료",
      "description": "파워업 효과가 끝나면 크기 초기화",
      "blocks": [
        "when_message_cast('파워업')",
        "// 파워업 시작 - 크기 증가",
        "set_size(150)",
        "set_effect('color', 50)",
        "set_variable('파워업시간', 5)",
        "",
        "// 파워업 지속",
        "repeat_basic(50)",
        "  change_variable('파워업시간', -0.1)",
        "  set_text('파워업: ' + <get_variable('파워업시간')> + '초')",
        "  wait_second(0.1)",
        "",
        "// 파워업 종료 - 모든 것 초기화",
        "reset_scale_size()",
        "clear_effect()",
        "set_text('')",
        "speak_something('파워업 종료!')"
      ],
      "explanation": "파워업이 끝나면 reset_scale_size로 캐릭터를 원래 크기로 되돌립니다."
    },
    {
      "title": "스테이지 초기화",
      "description": "새 스테이지 시작 시 모든 오브젝트 크기 리셋",
      "blocks": [
        "when_message_cast('새스테이지')",
        "// 모든 상태 초기화",
        "reset_scale_size()",
        "clear_effect()",
        "remove_dialog()",
        "locate_xy(0, 0)",
        "",
        "// 스테이지별 설정",
        "if_condition(<get_variable('스테이지') = 1>)",
        "  set_background('숲')",
        "else_if(<get_variable('스테이지') = 2>)",
        "  set_background('사막')",
        "  // 스테이지 2는 작은 크기로 시작",
        "  set_size(80)",
        "else_if(<get_variable('스테이지') = 3>)",
        "  set_background('우주')",
        "  // 스테이지 3은 큰 크기로 시작",
        "  set_size(120)",
        "",
        "speak_something('스테이지 ' + <get_variable('스테이지')> + ' 시작!')"
      ],
      "explanation": "각 스테이지 시작 전 reset_scale_size로 기본 상태를 만든 후 스테이지별 설정을 적용합니다."
    },
    {
      "title": "호흡 애니메이션 리셋",
      "description": "주기적 애니메이션의 정확한 복원",
      "blocks": [
        "when_run_button_click",
        "reset_scale_size()",
        "set_variable('호흡중', true)",
        "",
        "// 호흡 애니메이션",
        "repeat_while_true(<get_variable('호흡중')>)",
        "  // 들숨",
        "  repeat_basic(20)",
        "    change_scale_size(0.5)",
        "    wait_second(0.05)",
        "  // 날숨",
        "  repeat_basic(20)",
        "    change_scale_size(-0.5)",
        "    wait_second(0.05)",
        "",
        "when_some_key_pressed('r')",
        "// R키로 리셋",
        "set_variable('호흡중', false)",
        "reset_scale_size()",
        "speak_something('리셋!')",
        "wait_second(1)",
        "set_variable('호흡중', true)"
      ],
      "explanation": "애니메이션을 중단하고 reset_scale_size로 정확히 100%로 복원합니다."
    },
    {
      "title": "미니게임 리셋",
      "description": "게임 오버 시 모든 요소 초기화",
      "blocks": [
        "when_message_cast('게임오버')",
        "// 게임 오버 효과",
        "repeat_basic(5)",
        "  set_size(<random_number(50, 150)>)",
        "  set_effect('color', <random_number(0, 200)>)",
        "  wait_second(0.1)",
        "",
        "speak_something('게임 오버!')",
        "wait_second(2)",
        "",
        "// 모든 것 초기화",
        "reset_scale_size()",
        "clear_effect()",
        "remove_dialog()",
        "set_variable('점수', 0)",
        "set_variable('생명', 3)",
        "",
        "// 시작 위치로",
        "locate_xy(-200, 0)",
        "speak_something('다시 시작!')",
        "wait_second(1)",
        "remove_dialog()"
      ],
      "explanation": "게임 오버 후 reset_scale_size를 포함한 완전한 초기화를 수행합니다."
    }
  ],

